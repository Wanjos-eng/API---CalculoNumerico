{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Métodos Numéricos",
    "description": "Documentação para os métodos numéricos: Bissecção, Falsa Posição, Newton-Raphson e Secante.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/bisseccao": {
      "post": {
        "tags": ["Métodos Numéricos"],
        "summary": "Executa o método da Bissecção",
        "description": "Calcula a raiz de uma função no intervalo dado utilizando o método da Bissecção.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "funcao": {
                    "type": "string",
                    "example": "x^2 - 4"
                  },
                  "intervalo": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "example": [1, 3]
                  },
                  "tolerancia": {
                    "type": "number",
                    "example": 0.01
                  },
                  "maxIteracao": {
                    "type": "integer",
                    "example": 100
                  }
                },
                "required": ["funcao", "intervalo", "tolerancia", "maxIteracao"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado da execução do método da Bissecção",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultado": {
                      "type": "object",
                      "properties": {
                        "raiz": { "type": "number" },
                        "valorFuncao": { "type": "number" },
                        "iteracoes": { "type": "integer" },
                        "convergiu": { "type": "boolean" },
                        "erro": { "type": "number" },
                        "motivoParada": { "type": "string" },
                        "passos": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "iteracao": { "type": "integer" },
                              "intervaloAtual": {
                                "type": "object",
                                "properties": {
                                  "a": { "type": "number" },
                                  "b": { "type": "number" }
                                }
                              },
                              "pontoMedio": { "type": "number" },
                              "valorFuncao": { "type": "number" },
                              "erro": { "type": "number" },
                              "descricao": { "type": "string" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Parâmetros inválidos." },
          "500": { "description": "Erro interno do servidor." }
        }
      }
    },
    "/fp": {
      "post": {
        "tags": ["Métodos Numéricos"],
        "summary": "Executa o método da Falsa Posição",
        "description": "Calcula a raiz de uma função no intervalo dado utilizando o método da Falsa Posição.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "funcao": {
                    "type": "string",
                    "example": "x^2 - 4"
                  },
                  "intervalo": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "example": [1, 3]
                  },
                  "tolerancia": {
                    "type": "number",
                    "example": 0.01
                  },
                  "maxIteracao": {
                    "type": "integer",
                    "example": 100
                  }
                },
                "required": ["funcao", "intervalo", "tolerancia", "maxIteracao"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado da execução do método da Falsa Posição",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultado": {
                      "type": "object",
                      "properties": {
                        "raiz": { "type": "number" },
                        "valorFuncao": { "type": "number" },
                        "iteracoes": { "type": "integer" },
                        "convergiu": { "type": "boolean" },
                        "erro": { "type": "number" },
                        "motivoParada": { "type": "string" },
                        "passos": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "iteracao": { "type": "integer" },
                              "intervaloAtual": {
                                "type": "object",
                                "properties": {
                                  "a": { "type": "number" },
                                  "b": { "type": "number" }
                                }
                              },
                              "pontoMedio": { "type": "number" },
                              "valorFuncao": { "type": "number" },
                              "erro": { "type": "number" },
                              "descricao": { "type": "string" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Parâmetros inválidos." },
          "500": { "description": "Erro interno do servidor." }
        }
      }
    },
    "/newtonRaphson": {
      "post": {
        "tags": ["Métodos Numéricos"],
        "summary": "Executa o método de Newton-Raphson",
        "description": "Calcula a raiz de uma função utilizando o método de Newton-Raphson.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "funcao": { "type": "string", "example": "x^2 - 4" },
                  "derivada": { "type": "string", "example": "2*x" },
                  "chuteInicial": { "type": "number", "example": 1 },
                  "tolerancia": { "type": "number", "example": 0.01 },
                  "maxIteracao": { "type": "integer", "example": 100 }
                },
                "required": ["funcao", "derivada", "chuteInicial", "tolerancia", "maxIteracao"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado da execução do método de Newton-Raphson",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "raiz": { "type": "number" },
                    "valorFuncao": { "type": "number" },
                    "iteracoes": { "type": "integer" },
                    "convergiu": { "type": "boolean" },
                    "erro": { "type": "number" },
                    "motivoParada": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Parâmetros inválidos." },
          "500": { "description": "Erro interno do servidor." }
        }
      }
    },
    "/secante": {
      "post": {
        "tags": ["Métodos Numéricos"],
        "summary": "Executa o método da Secante",
        "description": "Calcula a raiz de uma função utilizando o método da Secante.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "funcao": { "type": "string", "example": "x^2 - 4" },
                  "x0": { "type": "number", "example": 1 },
                  "x1": { "type": "number", "example": 3 },
                  "tolerancia": { "type": "number", "example": 0.01 },
                  "maxIteracao": { "type": "integer", "example": 100 }
                },
                "required": ["funcao", "x0", "x1", "tolerancia", "maxIteracao"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado da execução do método da Secante",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "raiz": { "type": "number" },
                    "valorFuncao": { "type": "number" },
                    "iteracoes": { "type": "integer" },
                    "convergiu": { "type": "boolean" },
                    "erro": { "type": "number" },
                    "motivoParada": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Parâmetros inválidos." },
          "500": { "description": "Erro interno do servidor." }
        }
      }
    },
    "/perguntar": {
      "post": {
        "tags": ["Inteligência Artificial"],
        "summary": "Faz uma pergunta para a IA",
        "description": "Envia uma pergunta para a IA com base no contexto da última execução de métodos numéricos.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pergunta": {
                    "type": "string",
                    "example": "Qual é o próximo passo na resolução?"
                  }
                },
                "required": ["pergunta"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resposta da IA com o contexto da última execução",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "contexto": {
                      "type": "object",
                      "description": "Dados da última execução de um método numérico"
                    },
                    "respostaIA": {
                      "type": "string",
                      "description": "Resposta fornecida pela IA"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de requisição, contexto não encontrado ou pergunta não fornecida.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "Nenhum contexto encontrado." }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "Erro ao processar a pergunta." }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
